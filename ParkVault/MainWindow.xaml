<Window x:Class="ParkVault.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParkVault"
        mc:Ignorable="d"
        Title="Park vault" Height="371" Width="265" ResizeMode="NoResize" WindowStyle="None" MouseDown="Window_MouseDown" RenderTransformOrigin="0.5,0.5">
    <Canvas Background="#FF083332">
        <Label Content="Park secure vault" Height="35" Width="265" Foreground="#FF47A8B5" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="15,5,5,5" Background="#FF032337"/>
        <Button x:Name="CloseButton" Content="X" Width="33" Height="25" Canvas.Left="227" Canvas.Top="5" Foreground="#FFAFB3AD" Background="#FF50180B" HorizontalAlignment="Left" VerticalAlignment="Center" BorderBrush="#FF292828"/>
        <Canvas x:Name="OperatePanel" Height="362" Width="265">
            <Button x:Name="LoginButton" Content="Login" Width="50" Height="20" Canvas.Left="15" Canvas.Top="122" Foreground="#FF5AD21A" Background="#FF1F5618" HorizontalAlignment="Center" VerticalAlignment="Top" Click="LoginButton_Click"/>
            <Button x:Name="RegisterButton" Content="Register" Width="58" Height="20" Canvas.Left="132" Canvas.Top="122" Foreground="#FF5AD21A" Background="#FF1F5618" HorizontalAlignment="Center" VerticalAlignment="Top" Click="RegisterButton_Click"/>
            <TextBox x:Name="UserNameText" TextWrapping="Wrap" Text="TextBox" Width="151" Height="18" Canvas.Left="101" Canvas.Top="69" Background="#FF3C3112" Foreground="#FFBD912F" BorderBrush="#FF8E6110" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Label Content="Username" Height="26" Width="86" Canvas.Left="10" Canvas.Top="65" Foreground="#FF47B553" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Button x:Name="LogoutButton" Content="Logout" Width="57" Height="20" Canvas.Left="70" Canvas.Top="122" Foreground="#FF5AD21A" Background="#FF1F5618" HorizontalAlignment="Center" VerticalAlignment="Top" Click="LogoutButton_Click"/>
            <Button x:Name="Box0AButton" Content="0A" Canvas.Left="12" Canvas.Top="157" Width="56" Background="#FFDEA030" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Box0AButton_Click"/>
            <Button x:Name="Box0BButton" Content="0B" Canvas.Left="73" Canvas.Top="157" Width="56" Background="#FFDEA030" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Box0BButton_Click"/>
            <Button x:Name="Box0CButton" Content="0C" Canvas.Left="134" Canvas.Top="157" Width="56" Background="#FFDEA030" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Box0CButton_Click"/>
            <Button x:Name="Box0DButton" Content="0D" Canvas.Left="196" Canvas.Top="157" Width="56" Background="#FFDEA030" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Box0DButton_Click"/>
            <Button x:Name="Box1AButton" Content="1A" Canvas.Left="12" Canvas.Top="182" Width="56" Background="#FFDEA030" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Box1AButton_Click"/>
            <Button x:Name="Box1BButton" Content="1B" Canvas.Left="73" Canvas.Top="182" Width="56" Background="#FFDEA030" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Box1BButton_Click"/>
            <Button x:Name="Box1CButton" Content="1C" Canvas.Left="134" Canvas.Top="182" Width="56" Background="#FFDEA030" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Box1CButton_Click"/>
            <Button x:Name="Box1DButton" Content="1D" Canvas.Left="196" Canvas.Top="182" Width="56" Background="#FFDEA030" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Box1DButton_Click"/>
            <Button x:Name="Box2AButton" Content="2A" Canvas.Left="12" Canvas.Top="207" Width="56" Background="#FFDEA030" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Box2AButton_Click"/>
            <Button x:Name="Box2BButton" Content="2B" Canvas.Left="73" Canvas.Top="207" Width="56" Background="#FFDEA030" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Box2BButton_Click"/>
            <Button x:Name="Box2CButton" Content="2C" Canvas.Left="134" Canvas.Top="207" Width="56" Background="#FFDEA030" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Box2CButton_Click"/>
            <Button x:Name="Box2DButton" Content="2D" Canvas.Left="196" Canvas.Top="207" Width="56" Background="#FFDEA030" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Box2DButton_Click"/>
            <Button x:Name="Box3AButton" Content="3A" Canvas.Left="12" Canvas.Top="232" Width="56" Background="#FFDEA030" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Box3AButton_Click"/>
            <Button x:Name="Box3BButton" Content="3B" Canvas.Left="73" Canvas.Top="232" Width="56" Background="#FFDEA030" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Box3BButton_Click"/>
            <Button x:Name="Box3CButton" Content="3C" Canvas.Left="134" Canvas.Top="232" Width="56" Background="#FFDEA030" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Box3CButton_Click"/>
            <Button x:Name="Box3DButton" Content="3D" Canvas.Left="196" Canvas.Top="232" Width="56" Background="#FFDEA030" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Box3DButton_Click"/>
            <Label Content="Selected box" Height="26" Width="85" Canvas.Left="12" Canvas.Top="262" Foreground="#FF47B553" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox x:Name="SelectedBoxText" Canvas.Left="100" TextWrapping="Wrap" Text="TextBox" Canvas.Top="266" Width="152" Background="#FF3C3112" Foreground="#FFBD912F" BorderBrush="#FF8E6110" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Label Content="Status" Height="26" Width="85" Canvas.Left="12" Canvas.Top="288" Foreground="#FF47B553" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox x:Name="BoxStatusText" Canvas.Left="100" TextWrapping="Wrap" Text="TextBox" Canvas.Top="292" Width="152" Background="#FF3C3112" Foreground="#FFBD912F" BorderBrush="#FF8E6110" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Button x:Name="GetContentsButton" Content="Get" Width="47" Height="20" Canvas.Left="100" Canvas.Top="343" Foreground="#FF5AD21A" Background="#FF1F5618" HorizontalAlignment="Center" VerticalAlignment="Top" Click="GetContentsButton_Click"/>
            <Button x:Name="PutContentsButton" Content="Put" Width="48" Height="20" Canvas.Left="152" Canvas.Top="343" Foreground="#FF5AD21A" Background="#FF1F5618" HorizontalAlignment="Center" VerticalAlignment="Top" Click="PutContentsButton_Click"/>
            <Button x:Name="ClearContentsButton" Content="Clear" Width="47" Height="20" Canvas.Left="205" Canvas.Top="343" Foreground="#FF5AD21A" Background="#FF1F5618" HorizontalAlignment="Center" VerticalAlignment="Top" Click="ClearContentsButton_Click"/>
            <Label Content="Contents" Height="26" Width="85" Canvas.Left="12" Canvas.Top="340" Foreground="#FF47B553" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Label Content="Access code" Height="26" Width="85" Canvas.Left="12" Canvas.Top="313" Foreground="#FF47B553" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox x:Name="AccessCodeText" Canvas.Left="100" TextWrapping="Wrap" Text="TextBox" Canvas.Top="317" Width="152" Background="#FF3C3112" Foreground="#FFBD912F" BorderBrush="#FF8E6110" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <TextBox x:Name="PasswordText" TextWrapping="Wrap" Text="TextBox" Width="151" Height="18" Canvas.Left="101" Canvas.Top="93" Background="#FF3C3112" Foreground="#FFBD912F" BorderBrush="#FF8E6110" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Label Content="Password" Height="26" Width="86" Canvas.Left="10" Canvas.Top="89" Foreground="#FF47B553" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Button x:Name="UnregisterButton" Content="Unreg" Width="56" Height="20" Canvas.Left="196" Canvas.Top="122" Foreground="#FF5AD21A" Background="#FF1F5618" HorizontalAlignment="Center" VerticalAlignment="Top" Click="UnregisterButton_Click"/>
            <TextBox x:Name="ServerText" TextWrapping="Wrap" Text="TextBox" Width="151" Height="18" Canvas.Left="101" Canvas.Top="45" Background="#FF3C3112" Foreground="#FFBD912F" BorderBrush="#FF8E6110" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Label Content="Server" Height="26" Width="86" Canvas.Left="10" Canvas.Top="41" Foreground="#FF47B553" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </Canvas>
        <Canvas x:Name="WaitPanel" Height="362" Width="265" d:IsHidden="True">
            <ProgressBar x:Name="Progress" Height="10" Canvas.Left="12" Canvas.Top="224" Width="240" IsIndeterminate="True" Background="#FF2A790E" BorderBrush="#FF6FD61E" Foreground="#FF7FEC29" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Label Content="Operation in progress" Height="31" Width="152" Foreground="#FF59B547" FontSize="14" Padding="5,5,5,5" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Top="188" Canvas.Left="55"/>
            <Image Height="96" Canvas.Left="82" Canvas.Top="104" Width="102" Source="/Images/servers.png" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </Canvas>

    </Canvas>
</Window>
